<%# locals: { field:, attachment:, variant: nil, size: [100, 100] } %>

<% if attachment.variable? %>
  <% if variant.nil? %>
    <%= image_tag(field.variant(attachment, resize_to_limit: size)) %>
  <% elsif variant == false %>
    <%= image_tag(field.url(attachment)) %>
  <% else %>
    <%= image_tag(attachment.variant(variant)) %>
  <% end %>
<% else %>
  <%= image_tag(field.url(attachment)) %>
<% end %>
