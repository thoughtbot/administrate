<table>
  <thead>
    <tr>
      <% table_presenter.attribute_names.each do |attr_name| %>
        <th><%= attr_name.to_s.titleize %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% resources.each do |resource| %>
      <tr class="table-row" role="link" tabindex="0" data-url="<%= polymorphic_path(resource) -%>">
        <% table_presenter.attributes_for(resource).each do |attribute| %>
          <td><%= render attribute %></td>
        <% end %>

        <td><%= link_to(
          t("administrate.actions.show"),
          resource,
          class: "action-show",
        ) %></td>

        <td><%= link_to(
          t("administrate.actions.edit"),
          [:edit, resource],
          class: "action-edit",
        ) %></td>

        <td><%= link_to(
          t("administrate.actions.destroy"),
          resource,
          class: "action-destroy",
          method: :delete,
          data: { confirm: t("administrate.actions.confirm") }
        ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
