<ul class="sidebar-list">
  <div class="sidebar-logo">
    <%= image_tag "logo.svg" %>
    <h1 class="sidebar-logo-heading">Administrate</h1>
  </div>

  <% [:customers, :line_items, :orders, :products].each do |resource| %>
    <li>
      <%= link_to(
        resource.to_s.titleize,
        resource,
        class: link_class(resource)
      ) %>
    </li>
  <% end %>
</ul>
